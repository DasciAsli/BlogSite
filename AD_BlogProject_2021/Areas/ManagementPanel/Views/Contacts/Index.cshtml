@model IEnumerable<AD_BlogProject_2021.Models.EntityFramework.Contacts>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContactName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactBaslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactMessage)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactBaslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactMessage)
        </td>      
        <td>
            
            @Html.ActionLink("Details", "Details", new { id=item.ContactId },new { @class="btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ContactId },new { @class="btn btn-danger" })
        </td>
    </tr>
}

</table>
