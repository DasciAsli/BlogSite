@model AD_BlogProject_2021.Models.EntityFramework.Blogs

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Blogs</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SubTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageURL)
        </dt>

        <dd>
            <img src="@Model.ImageURL" alt="Alternate Text" />
        </dd>

        <dt>
           <span>Etiketler</span>
        </dt>

        <dd>
            @if (Model.Tags.Count > 0)
            {
                foreach (var item in Model.Tags)
                {
                    <span>@item.TagName ,</span>
                }
            }

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegisterDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BlogDetails.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BlogDetails.Description)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BlogId },new { @class="btn btn-warning" }) |
    @Html.ActionLink("Back to List", "Index",null,new { @class="btn btn-secondary" })
</p>
