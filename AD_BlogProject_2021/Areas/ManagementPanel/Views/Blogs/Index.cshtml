@model IEnumerable<AD_BlogProject_2021.Models.EntityFramework.Blogs>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,new { @class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Title.Length > 5)
            {
                <p>@item.Title.Substring(0, 5) ..</p>
            }
            else
            {
                <p>@item.Title</p>
            }

        </td>
        <td>
            @if (item.SubTitle.Length > 10)
            {
                <p>@item.SubTitle.Substring(0, 10) ..</p>
            }
            else
            {
                <p>@item.Title</p>
            }

        </td>
        <td class="w-25">
            <img src="@item.ImageURL" width="30%"  alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegisterDate)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BlogId },new { @class="btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id=item.BlogId },new {@class="btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BlogId },new {@class="btn btn-danger" })
        </td>
    </tr>
}

</table>
