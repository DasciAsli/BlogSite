@model IEnumerable<AD_BlogProject_2021.Models.EntityFramework.Roles>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RolName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RolName)
        </td>
        <td>
            @if (item.IsActive== true)
            {
                <span>Aktif</span>
            }
            else
            {
                <span>Pasif</span>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegisterDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit","Roles",new { id=item.RolId}, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", "Roles", new { id = item.RolId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", "Roles", new { id = item.RolId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
