@model IEnumerable<AD_BlogProject_2021.Models.EntityFramework.Abouts>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,new {  @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @if (item.Description.Length > 50)
            {
                <p>@item.Description.Substring(0,50) ...</p>
            }
            else
            { 
                <p>@item.Description</p>
            }


        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AboutId },new {  @class ="btn btn-success"}) |
            @Html.ActionLink("Details", "Details", new { id=item.AboutId },new { @class="btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AboutId },new { @class="btn btn-danger" })
        </td>
    </tr>
}

</table>
