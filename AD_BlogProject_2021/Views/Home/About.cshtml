@model AD_BlogProject_2021.Models.ViewModel.AboutViewModel
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">
            
            @Html.Partial("_SectionTitle")

            <div class="row ">
                <center>
                    <div class="col-lg-8 pt-4 pt-lg-0 content ">
                        @foreach (var item in Model.Abouts)
                        {
                            <h3>@item.Title</h3>
                            <p>
                                @item.Description
                            </p>

                        }

                    </div>
                </center>
                
            </div>

        </div>
    </section><!-- End About Section -->
    <!-- ======= Skills Section ======= -->
    <section id="skills" class="skills ">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Yetenekler</h2>
               
            </div>

            <div class="row skills-content">

                <div class="col-lg-6 mx-auto h-25">
                    @foreach (var item in Model.Skills)
                    {
                        
                            <div class="progress">
                                <span class="skill">@item.SkillName <i class="val">@item.SkillRate %</i></span>
                                <div class="progress-bar-wrap">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="@item.SkillRate" aria-valuemin="0" aria-valuemax="@item.SkillRate"></div>
                                </div>
                            </div>
                    }

                </div>
            </div>
        </div>
    </section><!-- End Skills Section -->
   
  
  
</main><!-- End #main -->
