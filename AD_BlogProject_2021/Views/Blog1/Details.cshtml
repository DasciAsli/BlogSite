@model AD_BlogProject_2021.Models.ViewModel.BlogViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}


@section _Search
{
    @Html.Partial("_Search", Model.Tags)
}

<article class="blog-post px-3 py-5 p-md-5">
    
    <div class="container single-col-max-width">
        @foreach (var item in Model.Blogs)
        {
            <header class="blog-post-header">
                <h2 class="title mb-2">@item.Title</h2>
                <div class="meta mb-3">
                    <span class="date">@item.RegisterDate</span><span class="time">5 min read</span><span class="comment"><a class="text-link" href="#">4 comments</a></span>
                </div>
            </header>

            <div class="blog-post-body">
                <figure class="blog-banner">
                    <a href="https://made4dev.com">
                        <img class="img-fluid" width="100%"
                             src="@item.ImageURL"
                             alt="image" />
                    </a>

                </figure>
                <p>
                    @Html.Raw(@item.BlogDetails.Description)

                </p>



                <nav class="blog-nav nav nav-justified my-5">
                    @Html.ActionLink("Previous", "Details", new { id = item.BlogId }, new { @class = "nav-link-prev nav-item nav-link rounded-left" })
                    @Html.ActionLink("Next", "Details", new { id = item.BlogId }, new { @class = "nav-link-next nav-item nav-link rounded-right" })
                </nav>

