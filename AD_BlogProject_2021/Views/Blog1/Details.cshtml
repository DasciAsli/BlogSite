                    <h4 class="mb-4">2 Comments</h4>
                    <div id="CommentList">
                        @foreach (var comment in Model.Blogs)
                        {

                            @Html.Partial("_CommentList", comment.Comments.ToList())
                        }
                    </div>
                </div>
            </div>
            foreach (var blog in Model.Blogs)
            {

                @Html.Hidden("BlogId", blog.BlogId)
            }
