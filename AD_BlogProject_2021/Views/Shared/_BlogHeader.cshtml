<header class="header text-center">
    <h1 class="blog-name pt-lg-4 mb-0">
        <a class="no-text-decoration" href=@Url.Action("Index","Blog1")>Aslı'nın Bloğu</a>
    </h1>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <button class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navigation"
                aria-controls="navigation"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navigation" class="collapse navbar-collapse flex-column">
            <div class="profile-section pt-3 pt-lg-0">
                <img class="profile-image mb-3 rounded-circle mx-auto"
                     src="~/Content/BlogContent/images/profile4.jpg"
                     alt="image" />

                <div class="bio mb-3">
                    Hi, my name is Anthony Doe. Briefly introduce yourself here. You
                    can also provide a link to the about page.<br /><a href=@Url.Action("About","Blog1")>Find out more about me</a>
                </div>
                <!--//bio-->
                <ul class="social-list list-inline py-3 mx-auto">
                   
                    <li class="list-inline-item">
                        <a href="https://github.com/DasciAsli"><i class="fab fa-github-alt fa-fw"></i></a>
                    </li>
                   
                </ul>
                <!--//social-list-->
                <hr />
            </div>
            <!--//profile-section-->

            <ul class="navbar-nav flex-column text-start">
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Title=="Index"? "active" : "")"; href=@Url.Action("Index","Blog1")>
                        <i class="fas fa-home fa-fw me-2"></i>Blog Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link @(ViewBag.Title=="About"? "active" : "")" href=@Url.Action("About","Blog1")><i class="fas fa-user fa-fw me-2"></i>About Me</a>
                </li>
            </ul>
        </div>
    </nav>
</header>
