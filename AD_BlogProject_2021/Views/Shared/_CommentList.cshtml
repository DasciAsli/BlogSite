@model List<AD_BlogProject_2021.Models.EntityFramework.Comments>


<style>
    .al {
    }
</style>
<ul class="comment-tree list-unstyled">
    @foreach (var yorum in Model.Where(u => u.IsReply == 0))
    {
        <li class="mb-5 ">
            <div class="comment-area-box shadow-sm px-3">
                <div class="row">

                    @*<div class="col-2">
                    <img alt="" src="~/Content/img/comment1.png" width="100%" class="img-fluid float-left mr-3 mt-2">
                    </div>*@

                    <div class="col-10">
                        <h5 class="mb-1" id="@yorum.BlogId">@yorum.CommentatorName</h5>

                        <div class="comment-meta mt-4 mt-lg-0 mt-md-0 float-lg-right float-md-right">
                            <a href="#" class="al ">
                                <i class="icofont-reply mr-2 text-muted">

                                </i>Reply |
                            </a>
                            <span class="date-comm mx-2 text-muted">@yorum.RegisterDate.ToString("dd.MM.yyyy") </span>
                        </div>

                        <div class="comment-content mt-3">
                            <p>@yorum.Comment</p>
                        </div>
                    </div>
                </div>
                

                

             
            </div>
        </li>

    }

</ul>
